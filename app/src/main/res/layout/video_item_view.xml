<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
<ImageView
    android:id="@+id/iv_thundata_img1"
    android:layout_width="@dimen/px972"
    android:layout_height="@dimen/px542"
    android:layout_marginTop="@dimen/px42"
    android:layout_gravity="center_horizontal"
    android:src="@mipmap/ic_launcher"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px44"
        android:layout_marginRight="@dimen/px44"
        android:layout_marginTop="@dimen/px42"
        android:layout_marginBottom="@dimen/px42">

        <ImageView
            android:id="@+id/iv_info_img"
            android:layout_width="@dimen/px106"
            android:layout_height="@dimen/px106"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="120"
                android:textColor="@color/black"
                android:textSize="@dimen/px42"
                android:text="标题"/>

            <TextView
                android:id="@+id/tv_video_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_video_name"
                android:layout_marginTop="5dp"
                android:text="内容"
                android:textColor="@color/color_gray_text"
                android:textSize="@dimen/px38" />
        </LinearLayout>
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>
